    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "/media/fat/MiSTer.elf",
            "args": [],
            "stopAtEntry": false,
            "cwd": "/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "pipeTransport": {
                "pipeCwd": "/usr/bin",
                "pipeProgram": "/usr/bin/ssh",
                "pipeArgs": [
                    "root@mister-dev"
                ],
                "debuggerPath": "/usr/bin/gdb",
            },
            /*"sourceFileMap": {
                "/workdir/": "${workspaceRoot}"
            },*/
            "preLaunchTask": "deploy_debug",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "arm architecture",
                    "text": "set architecture arm",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}